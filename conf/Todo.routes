###
PUT /todo/:id controllers.todo.TodoController.update(id: Long, description: Option[String], isCompleted: Option[Boolean])

###
# responses:
#   200:
#     content:
#       application/json:
#         schema:
#           $ref: '#/components/schemas/models.todo.Todo'
